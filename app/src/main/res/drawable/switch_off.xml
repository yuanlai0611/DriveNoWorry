<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

<item>
<shape>

    <size
        android:height="80dp"
        android:width="80dp"/>

    <stroke
        android:width="1dp"
        android:color="@color/colorLightGray"/>

    <corners
        android:radius="40dp"/>

</shape>
</item>

<item
    android:start="3dp"
    android:end="3dp"
    android:top="3dp"
    android:bottom="3dp">

    <shape>
        <size
            android:height="70dp"
            android:width="70dp"/>

        <stroke
            android:width="1dp"
            android:color="@color/colorLightGray"/>

        <corners
            android:radius="35dp"/>

    </shape>

</item>

<item
    android:start="6dp"
    android:end="6dp"
    android:top="6dp"
    android:bottom="6dp">
    <shape>

        <size
            android:height="60dp"
            android:width="60dp"/>

        <stroke
            android:width="2dp"
            android:color="@color/colorDarkGray"/>

        <corners
            android:radius="40dp"/>

    </shape>
</item>

</layer-list>