<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp">

<android.support.v7.widget.CardView
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@drawable/result_ok"
            android:layout_width="25dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/instance_heart_sign"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/heart_sign"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="95dp"
            android:textSize="25sp"
            android:textColor="@color/colorStaticsBackground"
            android:text="心率"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/instance_heart_sign"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginStart="25dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:alpha="0.6"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorStaticsBackground"
                    android:textSize="30sp"
                    android:text="121.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/heart_high"
                    android:text="高值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:alpha="0.4"
                android:background="@color/colorStaticsBackground"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:alpha="0.6"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorLowestValue"
                    android:textSize="30sp"
                    android:text="91.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/heart_low"
                    android:text="低值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>

</FrameLayout>
